### \page pip-mode pip-mode
###
### \brief Set PiP execution mode
###
### \synopsis
### pip-mode [OPTION] [PIP-COMMAND]
###
### \description
### The following options are avilable. If no of them specified, then
### the compiled output file can be used as both PiP root and PiP task.
###
### \param -P 'process' mode
### \param -L 'process:preload' mode
### \param -C 'process:clone' mode
### \param -G 'process:got' mode
### \param -T 'thread' mode
### \param -u Show usage
###
### \sa pip-exec
### \sa printpipmode
###

INSTALLTOP=@prefix@
SRCTOP=@srcdir_top@
HAVE_PIPGLIBC=@have_pipglibc@

function usage() {
    echo $self "-p|-l|-g|-c|-t [<command> ...]";
    echo "    -P: 'process' mode";
    echo "    -L: 'process:preload' mode";
    echo "    -G: 'process:got' mode";
    echo "    -C: 'process:pipclone' mode";
    echo "    -T: 'pthread' mode";
    exit 0;
}

self=$0;
prefix=@prefix@;
flag_help=0;
flag_show=0;
pipbuild=false;
preload="";

if $pipbuld ; then
    predir=${SRCTOP}/preload;
    bindir=${SRCTOP}/bin;
else
    predir=${INSTALLTOP}/lib;
    bindir=${INSTALLTOP}/bin;
fi

if [[ -x ${predir}/pip_preload.so ]]; then
    preload="${predir}/pip_preload.so";
fi

for i; do
    case $i in
	-p|-P|--process)
	    if [[ x${preload} == "x" ]]; then
		if ${HAVE_PIPGLIBC}; then
		    pip_mode="process:pipclone";
		else
		    pip_mode="process:got";
		fi
	    else
		pip_mode="process:preload";
	    fi;;
	-l|-L|--process:preload)
	    if [[ "x${preload}" == "x" ]]; then
		echo "Unable to find PiP preload library";
		exit 1;
	    else
		pip_mode="process:preload";
	    fi;;
	-c|-C|--process:pipclone)
	    if ! ${HAVE_PIPGLIBC}; then
		echo "Not using PiP-glibc";
	    fi
	    pip_mode="process:pipclone";;
	-g|-G|--process:got)
	    pip_mode="process:got";;
	-t|-T|--thread|--pthread)
	    pip_mode=pthread;;
	--pipbuild)
	    pipbuild=true;;
	-u|--help)
	    usage;;
	-*)
	    echo "Unknown option '$1'";
	    exit 1;;
	*)
	    shift;
	    cmd=$@;
	    break;;
    esac
done

export PIP_MODE=${pip_mode};

if [ "${pip_mode}" != "pthread" ]; then
    if [ "x${preload}" != "x" ]; then
	if [[ "x${LD_PRELOAD}" == "x" ]]; then
	    export LD_PRELOAD="${preload}";
	else
	    export LD_PRELOAD="${preload}:${LD_PRELOAD}";
	fi
    fi
fi

if [ "x${cmd}" != "x" ]; then
    PIP_MODE=${pip_mode} ${cmd};
elif [ "x${pip_mode}" == "x" ]; then
    if ${pipbuild} ; then
	exec ${bindir}/printpipmode --pipbuild;
    else
	exec ${bindir}/printpipmode;
    fi
else
    if [ "${pip_mode}" != "pthread" ]; then
	if [ "x${preload}" != "x" ]; then
	    echo "LD_PRELOAD=${LD_PRELOAD}";
	fi
    fi
    echo "PIP_MODE=${PIP_MODE}";
fi
